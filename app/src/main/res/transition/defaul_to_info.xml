<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android">

<changeBounds android:duration="250">
    <targets>
        <target android:targetId="@+id/imageView" />
    </targets>
</changeBounds>

    <slide android:startDelay="250" android:slideEdge="bottom" android:duration="300">
        <targets>
            <target android:targetId="@+id/textView"/>
            <target android:targetId="@+id/textView2"/>
            <target android:targetId="@+id/close_Button" />

        </targets>
    </slide>




    <fade android:startDelay="500" android:duration="250">
        <targets>
            <target android:targetId="@+id/description" />



        </targets>
    </fade>
</transitionSet>
