<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


<!--The following theme handles the transition action and customization as well -->
    <style name="Theme.TransitionSample" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- Set the transitions which are used for the enter,exit,return and reEnter -->
        <item name="android:windowExitTransition" tools:targetApi="lollipop">
            @android:transition/explode <!--An example of how to use default transition-->
        </item>
        <item name="android:windowReenterTransition" tools:targetApi="lollipop">
           @transition/grid_reenter_transition <!--An example of how to use Custom transition-->

        </item>


    </style>
</resources>
