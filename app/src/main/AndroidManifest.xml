<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mti.constrain_layout_animation_mti">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--
            * In this project we have used Activity content transition in two different way
                ~ by xml for the first or Main Activity
                ~ by code for detail Activity -->

        <activity android:name=".MainActivity"
            android:theme="@style/Theme.TransitionSample">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".DetailActivity" /> <!--As we are using code for Detail Activity , we don't need to use any Transition theme-->
    </application>

</manifest>